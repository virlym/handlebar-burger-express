<h1>Eat-Da-Burger!</h1>

<h2>Ready for consumption</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="consume">Devoured?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured<br>
    <input type="radio" name="devour" value="0"> Just Grilled
  </div>

  <button type="submit">Add Burger</button>
</form>
